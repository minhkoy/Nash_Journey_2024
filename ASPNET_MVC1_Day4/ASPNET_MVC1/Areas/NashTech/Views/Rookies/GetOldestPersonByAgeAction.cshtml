@model Person

@{
}

<h1 class="text-info">The oldest people info</h1>
<table class="table table-hover">
    <thead>
        <tr class="table-primary">
            <th>First Name</th>
            <th>Last Name</th>
            <th>Gender</th>
            <th>Date of birth</th>
            <th>Phone number</th>
            <th>Birth place</th>
            <th>Age</th>
            <th>Is Graduated</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>@Model.FirstName</td>
            <td>@Model.LastName</td>
            <td>@Model.Gender</td>
            <td>@Model.DateOfBirth.ToString("dd/MM/yyyy")</td>
            <td>@Model.PhoneNumber</td>
            <td>@Model.BirthPlace</td>
            <td>@Model.Age</td>
            <td>
                <input class="form-check-input" type="checkbox" disabled checked=@(Model.IsGraduated) />
            </td>
        </tr>
    </tbody>
</table>